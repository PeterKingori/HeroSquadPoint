{{#partial "content"}}
    <div class="col-md-5">
    <h1>{{squad.name}}</h1>
    <p>Here are all the heroes listed in this squad:</p>
    <ol>
        {{#each heroes}}
            <li>
                <p><a href="/squads/{{squad.id}}/heroes/{{id}}">{{name}}</a></p>
            </li>
        {{/each}}
    </ol>
    <a href="/squads/{{squad.id}}/edit">Edit this squad</a><br>
    <a href="/squads/{{squad.id}}/delete">DELETE this squad</a>
    </div>
{{/partial}}

{{> layout.hbs}}