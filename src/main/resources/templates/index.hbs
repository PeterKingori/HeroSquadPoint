{{#partial "content"}}
    <div class="col-md-5">
        <h1 class="text-primary">Heroes List</h1>
        {{#if heroes}}
        <ol>
            {{#each heroes}}
                    <li>
                        <div class="card border-light text-dark my-3">
                            <div class="card-body">
                                <h4 class="card-title">Name: {{name}}</h4>
                                <p class="card-text">Squad ID: {{squadId}}</p>
                                <a href="/squads/:squadId/heroes/{{id}}" class="card-link">See more</a>
                            </div>
                        </div>
                    </li>
            {{/each}}
        </ol>
        {{else}}
            <p>No heroes added yet</p>
        {{/if}}
    </div>
{{/partial}}

{{> layout.hbs}}