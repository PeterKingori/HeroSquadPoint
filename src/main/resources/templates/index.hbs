{{#partial "content"}}
    <div class="col-md-5">
        <h1 class="text-danger">Current Heroes</h1>
        {{#if heroes}}
        <ol>
            {{#each heroes}}
                    <li>
                        <div class="card border-danger text-danger my-3">
                            <div class="card-body">
                                <h4 class="card-title">Name: {{name}}</h4>
                                <p class="card-text">Age: {{age}}</p>
                                <p class="card-text">Superpower: {{superpower}}</p>
                                <p class="card-text">Weakness: {{weakness}}</p>
                            </div>
                        </div>
                    </li>
            {{/each}}
        </ol>
        {{else}}
            <p>No heroes added yet</p>
        {{/if}}
    </div>
{{/partial}}

{{> layout.hbs}}