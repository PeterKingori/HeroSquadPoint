{{#partial "content"}}
    <div class="col-md-5">
        <h1 class="text-danger">Current Heroes</h1>
        {{#if heroes}}
        <ol>
            {{#each heroes}}
                    <li>
                        <div class="card text-dark my-3">
                            <div class="card-body">
                                <h4 class="card-title">Name: {{name}}</h4>
                                <p class="card-text">Age: {{age}}</p>
                                <p class="card-text">Superpower: {{superpower}}</p>
                                <p class="card-text">Weakness: {{weakness}}</p>
                            </div>
                        </div>
                    </li>
            {{/each}}
        </ol>
        {{else}}
            <p>No heroes added yet</p>
        {{/if}}
    </div>

    <div class="col-md-5">
        <h4 class="text-primary">Add a new superhero</h4>
        <form action="/heros/new" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group">
                <label for="age">Age</label>
                <input type="text" class="form-control" id="age" name="age">
            </div>
            <div class="form-group">
                <label for="superpower">Superpower</label>
                <input type="text" class="form-control" id="superpower" name="superpower">
            </div>
            <div class="form-group">
                <label for="weakness">Weakness</label>
                <input type="text" class="form-control" id="weakness" name="weakness">
            </div>
            <button type="submit" class="btn btn-primary">Add hero</button>
        </form>
    </div>
{{/partial}}

{{> layout.hbs}}