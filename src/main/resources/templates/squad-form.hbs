{{#partial "content"}}
    {{#if editSquad}}
        <div class="col-md-5">
            <h1>Edit this Squad</h1>
            <form action="/squads/{{editSquad.id}}/edit" method="post">
                <div class="form-group">
                    <label for="name">Edit this squad's name</label>
                    <input id="name" name="name" type="text" value="{{editSquad.name}}">
                </div>
                <div class="form-group">
                    <label for="cause">Edit this squad's cause</label>
                    <input id="cause" name="cause" type="text" value="{{editSquad.cause}}">
                </div>
                <button type="submit" class="btn btn-primary">Go!</button>
            </form>
        </div>

    {{else}}
        <div class="col-md-5">
            <h1>Add a new Squad</h1>
            <form action="/squads" method="post">
                <div class="form-group">
                    <label for="name">Squad Name</label>
                    <input class="form-control" id="name" name="name" type="text">
                </div>
                <div class="form-group">
                    <label for="cause">What is the squad fighting for</label>
                    <input class="form-control" id="cause" name="cause" type="text">
                </div>
                <button type="submit" class="btn btn-primary">Create new Squad</button>
            </form>
        </div>
    {{/if}}
{{/partial}}

{{> layout.hbs}}